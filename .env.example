# Environment Configuration Example
# Copy this file to .env and modify the values

# Application Configuration
SECRET_KEY=your-very-secret-key-here-change-this-in-production
FLASK_ENV=development
FLASK_DEBUG=1

# Database Configuration
# SQLite (Development)
DATABASE_URL=sqlite:///app.db

# PostgreSQL (Production/Docker)
# DATABASE_URL=postgresql://wii_party_user:secure_db_password_2024@localhost:5432/wii_party

# PostgreSQL (Docker Compose)
# DATABASE_URL=postgresql://wii_party_user:secure_db_password_2024@db:5432/wii_party

# Admin Configuration
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your-secure-admin-password-here

# Security Settings
SESSION_COOKIE_SECURE=False
# Set to True in production with HTTPS
# SESSION_COOKIE_SECURE=True

# Logging Configuration
LOG_TO_STDOUT=True

# Development Settings
DEBUG_SPECIAL_FIELDS=False
FORCE_SPECIAL_FIELD_TRIGGERS=False

# Production Settings (uncomment for production)
# FLASK_ENV=production
# FLASK_DEBUG=0
# SESSION_COOKIE_SECURE=True
# LOG_TO_STDOUT=False